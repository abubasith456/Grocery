                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:ellipsize="end"
                android:singleLine="false"
                android:text="30% completed"
                android:fontFamily="@font/work_sans_medium"
                android:gravity="start|center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp"
                app:drawableLeftCompat="@drawable/icon_progress_status" />
                -->

            <TextView
                android:id="@+id/textViewProjectDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:ellipsize="end"
                android:singleLine="false"
                android:text="Project Details"
                android:fontFamily="@font/work_sans_medium"
                android:gravity="start|center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp"
                app:drawableLeftCompat="@drawable/icon_logo" />

            <!--
            <TextView
                android:id="@+id/textViewProjectAddress"
