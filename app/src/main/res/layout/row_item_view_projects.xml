<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingStart="@dimen/_5sdp"
    android:paddingEnd="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewAvatar"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/tab_icon_about_us"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="start|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewProjectName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:ellipsize="end"
                android:singleLine="false"
                android:text="Raheja Towers (D001)"
                android:fontFamily="@font/work_sans_bold"
                android:gravity="start|center"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/textViewProjectStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:ellipsize="end"
                android:singleLine="false"
                android:drawableLeft="@drawable/icon_progress_status"
                android:text="30% completed"
                android:fontFamily="@font/work_sans_medium"
                android:gravity="start|center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/textViewProjectDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:ellipsize="end"
                android:singleLine="false"
                android:drawableLeft="@drawable/icon_work"
                android:text="New lights installation and repair existing lights."
                android:fontFamily="@font/work_sans_medium"
                android:gravity="start|center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/textViewProjectAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:ellipsize="end"
                android:singleLine="false"
                android:drawableLeft="@drawable/icon_location_new"
                android:text="No. 3/65, 11th cross street, Mannivakkam, Chennai"
                android:fontFamily="@font/work_sans_medium"
                android:gravity="start|center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivMessage"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_chat"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:background="#DBDBDB" />

</LinearLayout>
