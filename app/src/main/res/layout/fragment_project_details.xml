<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_8sdp"
            android:background="@drawable/background_shadow" />
        <ImageView
            android:id="@+id/imageViewAvatar"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center"
            android:src="@drawable/tab_icon_about_us"
            tools:ignore="ContentDescription"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="start|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewProjectStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:ellipsize="end"
                android:singleLine="false"
                android:text="@string/percentage"
                android:fontFamily="@font/work_sans_medium"
                android:gravity="start|center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp"
                app:drawableLeftCompat="@drawable/icon_progress_status" />

            <TextView
                android:id="@+id/textViewProjectDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:ellipsize="end"
                android:singleLine="false"
                android:text="@string/details"
                android:fontFamily="@font/work_sans_medium"
                android:gravity="start|center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp"
                app:drawableLeftCompat="@drawable/icon_work" />

            <TextView
                android:id="@+id/textViewProjectAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:ellipsize="end"
                android:singleLine="false"
                android:text="@string/address"
                android:fontFamily="@font/work_sans_medium"
                android:gravity="start|center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp"
                app:drawableLeftCompat="@drawable/icon_location_new" />

            <TextView
                android:id="@+id/textViewDescriptionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:ellipsize="end"
                android:singleLine="false"
                android:text="@string/title"
                android:fontFamily="@font/work_sans_semibold"
                android:gravity="start|center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp"
                />

            <TextView
                android:id="@+id/textViewProjectDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_28sdp"
                android:layout_marginEnd="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:ellipsize="end"
                android:singleLine="false"
                android:text="@string/description"
                android:fontFamily="@font/work_sans_medium"
                android:gravity="start|center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_12sdp"
               />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        android:focusable="true">

        <ProgressBar
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/background_custom_progress_bar"
            android:visibility="visible" />
    </FrameLayout>

</FrameLayout>