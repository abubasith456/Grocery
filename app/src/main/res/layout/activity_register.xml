<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/_2sdp">

            <LinearLayout
                android:id="@+id/linearLayoutBack"
                android:layout_width="0dp"
                android:layout_height="@dimen/_45sdp"
                android:paddingStart="@dimen/_6sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:src="@drawable/icon_arrow_back"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_view_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:fontFamily="@font/work_sans_semibold"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:id="@+id/text_view_skip_payment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingEnd="@dimen/_10sdp"
                android:layout_weight="1"
                android:fontFamily="@font/work_sans_semibold"
                android:gravity="end"
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_8sdp"
            android:visibility="gone"
            android:background="@drawable/background_shadow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_110sdp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:contentDescription="@null"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/work_sans_bold"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_30sdp"  />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/background_half_round_corner_shape">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:paddingStart="@dimen/_14sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingEnd="@dimen/_14sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/sign_up_title_small"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_16sdp"
                    android:textAllCaps="false"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/work_sans_semibold"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/work_sans_medium"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:text="@string/user_name"/>

                    <EditText
                        android:id="@+id/editTextSignUpUserName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:padding="@dimen/_10sdp"
                        android:singleLine="true"
                        android:elevation="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:inputType="textPersonName"
                        tools:targetApi="lollipop"
                        android:textColor="@color/colorBlack"
                        android:hint="@string/enter_user_name"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/work_sans_medium"
                        android:layout_gravity="center"
                        android:background="@drawable/background_rounded_edit_text_gray"
                        tools:ignore="Autofill" />

                    <TextView
                        android:id="@+id/mTextViewUserNameError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_gravity="end"
                        android:textColor="@color/colorYellowGold"
                        android:fontFamily="@font/work_sans_medium"
                        android:visibility="gone"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/tv_mobile_number"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/work_sans_medium"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:text="@string/mobile_number"/>

                    <EditText
                        android:id="@+id/editTextSignUpMobileNumber"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:padding="@dimen/_10sdp"
                        android:singleLine="true"
                        android:elevation="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:inputType="phone"
                        tools:targetApi="lollipop"
                        android:textColor="@color/colorBlack"
                        android:hint="@string/enter_mobile_number"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/work_sans_medium"
                        android:layout_gravity="center"
                        android:background="@drawable/background_rounded_edit_text_gray"
                        tools:ignore="Autofill" />

                    <TextView
                        android:id="@+id/mTextViewMobileNumberError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:fontFamily="@font/work_sans_medium"
                        android:layout_gravity="end"
                        android:textColor="@color/colorYellowGold"
                        android:visibility="gone"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/tv_email_address"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/work_sans_medium"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:text="@string/email_address"/>

                    <EditText
                        android:id="@+id/editTextSignUpEmail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:padding="@dimen/_10sdp"
                        android:singleLine="true"
                        android:elevation="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:inputType="textEmailAddress"
                        tools:targetApi="lollipop"
                        android:textColor="@color/colorBlack"
                        android:hint="@string/enter_email_address"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/work_sans_medium"
                        android:layout_gravity="center"
                        android:background="@drawable/background_rounded_edit_text_gray"
                        tools:ignore="Autofill" />

                    <TextView
                        android:id="@+id/mTextViewEmailError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:fontFamily="@font/work_sans_medium"
                        android:layout_gravity="end"
                        android:textColor="@color/colorYellowGold"
                        android:visibility="gone"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/tv_password"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/work_sans_medium"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:text="@string/password"/>

                    <EditText
                        android:id="@+id/editTextSignUpPassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_36sdp"
                        android:padding="@dimen/_10sdp"
                        android:singleLine="true"
                        android:elevation="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:inputType="textPassword"
                        android:imeOptions="actionDone"
                        tools:targetApi="lollipop"
                        android:textColor="@color/colorBlack"
                        android:hint="@string/enter_password"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/work_sans_medium"
                        android:layout_gravity="center"
                        android:background="@drawable/background_rounded_edit_text_gray"
                        tools:ignore="Autofill" />

                    <TextView
                        android:id="@+id/mTextViewPasswordError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:fontFamily="@font/work_sans_medium"
                        android:layout_gravity="end"
                        android:textColor="@color/colorYellowGold"
                        android:visibility="gone"
                        android:textSize="@dimen/_10sdp" />

                    <LinearLayout
                        android:id="@+id/layoutSignUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:background="@drawable/background_corner_radius_white"
                        android:gravity="center"
                        android:padding="@dimen/_8sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/work_sans_semibold"
                            android:text="@string/sign_up"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/_16sdp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        android:focusable="true">

        <ProgressBar
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/background_custom_progress_bar"
            android:visibility="visible" />
    </FrameLayout>
</FrameLayout>
