<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.dashboard.tab_fragments.projects.details.tab_fragments.boq.MaterialSpecificationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/colorWhite"
        android:padding="@dimen/_2sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp">

            <ImageView
                android:id="@+id/buttonBackArrow"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_arrow_back"/>

        </LinearLayout>


            <TextView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="match_parent"
                android:text="Material Specification"
                android:textSize="@dimen/_16sdp"
                android:singleLine="true"
                android:fontFamily="@font/work_sans_semibold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="center"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            >

            <ImageView
                android:id="@+id/buttonHome"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_home"/>

        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_8sdp"
        android:background="@drawable/background_shadow" />


    <TableLayout
        android:layout_width="@dimen/_290sdp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_150sdp"
        android:background="#f1f1f1">

        <TableRow>

            <TextView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/material"
                android:fontFamily="@font/work_sans_bold"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Specification"
                android:fontFamily="@font/work_sans_bold"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Brand"
                android:fontFamily="@font/work_sans_bold"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_weight="1"
                android:text="Bulkhead Lights"
                android:fontFamily="@font/work_sans_medium"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10sdp"
                android:background="@color/colorWhite"
                />

            <TextView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Wall mounted LED light bulkhead IP65 20W"
                android:fontFamily="@font/work_sans_medium"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10sdp"
                android:background="@color/colorWhite"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ONE Light"
                android:fontFamily="@font/work_sans_medium"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10sdp"
                android:background="@color/colorWhite"
                android:layout_marginTop="@dimen/_6sdp"
                />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_weight="1"
                android:text="G.I conduits"
                android:fontFamily="@font/work_sans_medium"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10sdp"
                android:background="@color/colorWhite"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="25mm"
                android:fontFamily="@font/work_sans_medium"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10sdp"
                android:background="@color/colorWhite"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="COT"
                android:fontFamily="@font/work_sans_medium"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10sdp"
                android:background="@color/colorWhite"
                />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_weight="1"
                android:text="Cables"
                android:fontFamily="@font/work_sans_medium"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10sdp"
                android:background="@color/colorWhite"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="4C-25SqMM"
                android:fontFamily="@font/work_sans_medium"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10sdp"
                android:background="@color/colorWhite"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Ducab"
                android:fontFamily="@font/work_sans_medium"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10sdp"
                android:background="@color/colorWhite"
                />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_weight="1"
                android:text="3-Way junction box"
                android:fontFamily="@font/work_sans_medium"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10sdp"
                android:background="@color/colorWhite"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="25mm for GI conduit"
                android:fontFamily="@font/work_sans_medium"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10sdp"
                android:background="@color/colorWhite"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Rexton"
                android:fontFamily="@font/work_sans_medium"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10sdp"
                android:background="@color/colorWhite"
                />
        </TableRow>

    </TableLayout>


</LinearLayout>
